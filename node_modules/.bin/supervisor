#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../.npminstall/supervisor/0.11.0/supervisor/lib/cli-wrapper.js" "$@"
  ret=$?
else 
  node  "$basedir/../.npminstall/supervisor/0.11.0/supervisor/lib/cli-wrapper.js" "$@"
  ret=$?
fi
exit $ret
